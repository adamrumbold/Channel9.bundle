<?xml version="1.0" encoding="utf-8"?>

<site site="http://catchup.ninemsn.com.au/.*"
     plugin="http://c.brightcove.com/services/viewer*"
     initialState="playing"
    	version="1.0">

<crop x="0" y="0" width="642" height="380" />

<seekbar type="simple">
 <start x="48" y="308" />
 <end   x="185" y="308" />
 <played>
   <condition>
    <command name="play" />
    </condition>
  </played>

</seekbar>

<state name="playing">
  <event>
   <condition>
    <command name="pause" />
   </condition>
   <action>
    <move x="37" y="300" /> <!-- show the progress bar -->
    <type text=" " />
    <pause time="250" />
    <click x="37" y="337" />
    <goto state="paused" />
   </action>
  </event>
 </state>

 <state name="paused">
  <event>
   <condition>
    <command name="play" />
   </condition>
   <action>
    <move x="37" y="300" /> <!-- show the progress bar -->
    <click x="37" y="337" />
    <move x="37" y="200" /> <!-- hide the progress bar -->
    <goto state="playing" />
   </action>
  </event>
 </state>

</site>
